@model IEnumerable<UCP1_PAW_047_C.Models.Costumer>

@{
    ViewData["Title"] = "Index";
}

<h1>Costumer</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName(" Nama Costumer ")
            </th>
            <th>
                @Html.DisplayName(" No Hp ")
            </th>
            <th>
                @Html.DisplayName(" Alamat ")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamaCostumer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoHp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alamat)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCostumer"><i class="fa fa-marker fa-lg"> </i></a> |
                <a asp-action="Details" asp-route-id="@item.IdCostumer"><i class="fas fa-list"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdCostumer"><i class="fa fa-trash-alt fa-lg"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
